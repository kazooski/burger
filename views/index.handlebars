<h1>Your favorite burger!</h1>

<h2>The Freshly Cooked</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>The Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="food">Burger Name:</label>
    <input type="text" id="food" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Hungry?</label><br>
    <input type="radio" name="sleepy" value="1" checked> DEVOURED!<br>
    <input type="radio" name="sleepy" value="0"> On the plate.
  </div>

  <button type="submit">Add Burger</button>
</form>
