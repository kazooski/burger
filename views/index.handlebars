<h1>Your favorite burger!</h1>

<h2>The Freshly Cooked</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>The Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{name}}
        <button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
          {{#if devoured}}DEVOURED!{{else}}EAT ME!{{/if}}
        </button>
      </li>    
    {{/if}}
  {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="food">Burger Name:</label>
    <input type="text" id="food" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Hungry?</label><br>
    <input type="radio" name="devoured" value="1" checked> DEVOURED!<br>
    <input type="radio" name="devoured" value="0"> On the plate.
  </div>

  <button type="submit">Add Burger</button>
</form>
